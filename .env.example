APP_NAME="Status Monitor"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Admin user credentials for seeding
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password

# Customization Options
COMPANY_NAME="Your Company"
SUPPORT_EMAIL=support@yourcompany.com
SUPPORT_URL=https://yourcompany.com/support
TWITTER_HANDLE=yourcompany

# Monitoring Configuration
DEFAULT_CHECK_INTERVAL=300
DEFAULT_TIMEOUT=10
MAX_CHECK_INTERVAL=3600
MIN_CHECK_INTERVAL=60

# Theme Colors (hex codes)
THEME_PRIMARY_COLOR=#3b82f6
THEME_SUCCESS_COLOR=#10b981
THEME_WARNING_COLOR=#f59e0b
THEME_DANGER_COLOR=#ef4444
THEME_INFO_COLOR=#06b6d4

# Status Page Options
SHOW_UPTIME_PERCENTAGE=true
SHOW_RESPONSE_TIMES=true
UPTIME_CALCULATION_DAYS=30
INCIDENT_RETENTION_DAYS=90
AUTO_REFRESH_INTERVAL=30
ENABLE_AUTO_REFRESH=true

# Notifications (coming soon)
